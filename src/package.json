{
  "name": "respec-tools-dev",
  "version": "0.9.0",
  "description": "ResPec Tools to parse and reuse templates etc. CLI development in TypeScript",
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:cli": "tsc -p ts-cli-config.json",
    "build:lib": "rollup -c",
    "test": "ts-node -P ts-node-config.json bin/respecmd-cli.ts ../template test-input test-output"
  },
  "devDependencies": {
    "@types/cpx": "^1.5.1",
    "@types/node": "^14.14.31",
    "@types/marked": "~1.2.2",
    "rollup": "^2.40.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "cpx": "^1.5.0",
    "marked": "^2.0.1"
  }
}
